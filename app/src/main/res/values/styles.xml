<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/nGreen1</item>
        <item name="colorPrimaryDark">@color/nGreen2</item>
        <item name="colorAccent">@color/nYellow</item>
        <item name="android:color">@color/nGreen1</item>
        <item name="android:fontFamily">Roboto</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="layouttheme" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
